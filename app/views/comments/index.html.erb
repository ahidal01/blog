<p id="notice"><%= notice %></p>

<div class="jumbotron">
<h1>Comments</h1>
</div>

<div class="row col-md-offset-1 col-md-10">
  <table class="table table-striped">
    <thead>
      <tr>
        <th class="col-md-2">Post</th>
        <th class="col-md-4">Body</th>
        <th class="col-sm-1"></th>
        <th class="col-sm-1"></th>
        <th class="col-sm-1"></th>
      </tr>
    </thead>

    <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td class="col-md-2"><%= comment.post %></td>
          <td class="col-md-4"><%= comment.body %></td>
          <td class="col-md-1"><%= link_to 'Show', comment %></td>
          <td class="col-md-1"><%= link_to 'Edit', edit_comment_path(comment) %></td>
          <td class="col-md-1"><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<div class="row col-md-offset-1 col-md-10">
<%= link_to 'New Comment', new_comment_path %>
</div>