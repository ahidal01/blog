<p id="notice"><%= notice %></p>

<div class="jumbotron">
<h1>Users</h1>
</div>

<div class="row col-md-offset-1 col-md-10">
  <table class="table table-striped">
    <thead>
    <tr>
      <th class="col-md-2">First Name</th>
      <th class="col-md-4">Last Name</th>
      <th class="col-sm-1"></th>
      <th class="col-sm-1"></th>
      <th class="col-sm-1"></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td class="col-md-2"><%= user.first_name %></td>
          <td class="col-md-4"><%= user.last_name %></td>
          <td class="col-md-1"><%= link_to 'Show', user %></td>
          <td class="col-md-1"><%= link_to 'Edit', edit_user_path(user) %></td>
          <td class="col-md-1"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>

<div class="row col-md-offset-1 col-md-10">
 <%= link_to 'New User', new_user_path %>
</div>