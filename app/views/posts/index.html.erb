<p id="notice"><%= notice %></p>

<div class="jumbotron">
<h1>Posts</h1>
</div>

<div class="row col-md-offset-1 col-md-10">
  <table class="table table-striped">
    <thead>
      <tr>
        <th class="col-md-2">Title</th>
        <th class="col-md-4">Body</th>
        <th class="col-sm-1"></th>
        <th class="col-sm-1"></th>
        <th class="col-sm-1"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td class="col-md-2"><%= post.title %></td>
          <td class="col-md-4"><%= post.body %></td>
          <td class="col-md-1"><%= link_to 'Show', post %></td>
          <td class="col-md-1"><%= link_to 'Edit', edit_post_path(post) %></td>
          <td class="col-md-1"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>



<div class="row col-md-offset-1 col-md-10">
  <%= link_to 'New Post', new_post_path %>
</div>